<main class="container container-fluid align-self-center mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-8 cart">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                    </div>
                      
                        
                    
                </div>
                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">  </label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <select class="form-control" style="float: left;width: initial;">
                                <option data-id=1>Water</option>
                                <option data-id=2>Bread</option>
                                <option data-id=3>Eggs</option>
                               
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col align-self-center text-left text-muted">3 items</div>
                <div class="row border-top border-bottom">
                    {{#each items as |item|}}

                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" src="  "></div>
                        <div class="col">
                            <div class="row text-muted">{{item.item_name}}</div>
                            <div class="row"> Description</div>
                        </div>
                        <div class="col"> <a href="#">-</a><a href="#" class="border">1</a><a href="#">+</a> </div>
                        <div class="col">&#36; Price <span class="close">&#10005;</span></div>
                    </div>

                    {{/each}}
                </div>
                <div class="back-to-shop"><a href="#">&leftarrow;</a><span class="text-muted">Back to shop</span>
                </div>
            </div>
            <div class="col-sm-4 summary">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div class="col" style="padding-left:2;">ITEMS 3</div>
                    <div class="col text-right">&#36; 132.00</div>
                </div>
                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL PRICE</div>
                    <div class="col text-right">&#36; 137.00</div>
                </div> <button class="btn">CHECKOUT</button>
             </div>
        </div>
    </div>
</main>
<script src="/js/items.js"></script>